- var links = { }

mixin navlink(page, title, active)
  if active
    li.active
      a(href=page)= title
  else
    li
      a(href=page)= title

mixin navheader()
  .navbar-header
    button.navbar-toggle(type="button", data-toggle="collapse", data-target="#nav-collapsible")
      span.icon-bar
      span.icon-bar
      span.icon-bar
    a(href="/")
      img(src="/img/header-logo-short.png")

mixin navdefaultlinks(page)
  each t, p in links
    if p == page
      mixin navlink(p, t, true)
    else
      mixin navlink(p, t, false)
  li.dropdown
    a.dropdown-toggle(href="#", data-toggle="dropdown") Профиль
      b.caret
    ul.dropdown-menu
      if loggedIn
        li: a(href="/logout?dest=#{encodeURIComponent(baseUrl + page)}&_csrf=#{csrfToken}") Выйти
        li.divider
        li: a(href="/account/channels") Мои каналы
        li: a(href="/account/profile") Настройки профиля
        li: a(href="#{loginDomain}/account/edit") Настройки безопасности
      else
        li: a(href="#{loginDomain}/login?dest=#{encodeURIComponent(baseUrl + page)}") Авторизоваться
        li: a(href="#{loginDomain}/register") Зарегистрироваться

mixin navloginlogout(redirect)
  if loggedIn
    mixin navlogoutform(redirect)
  else
    mixin navloginform(redirect)

mixin navloginform(redirect)
  if loginDomain == null
    - loginDomain = ""
  .visible-lg
    form#loginform.navbar-form.navbar-right(action="#{loginDomain}/login", method="post")
      input(type="hidden", name="_csrf", value=csrfToken)
      input(type="hidden", name="dest", value=baseUrl + redirect)
      .form-group
        input#username.form-control(type="text", name="name", placeholder="Логин")
      .form-group
        input#password.form-control(type="password", name="password", placeholder="Пароль")
      .form-group
        .checkbox
          label
            input(type="checkbox", name="remember")
            span.navbar-text-nofloat Remember me
        button#login.btn.btn-default(type="submit") Авторизоваться
      button#login.btn.btn-default(type="submit") Login
  .visible-md
    p#loginform.navbar-text.pull-right
      a#login.navbar-link(href="#{loginDomain}/login?dest=#{encodeURIComponent(baseUrl + redirect)}") Авторизоваться
      span &nbsp;&middot;&nbsp;
      a#register.navbar-link(href="/register") Register

mixin navlogoutform(redirect)
  p#logoutform.navbar-text.pull-right
    span#welcome Привет, #{loginName}!
    span &nbsp;&middot;&nbsp;
    a#logout.navbar-link(href="/logout?dest=#{encodeURIComponent(baseUrl + redirect)}&_csrf=#{csrfToken}") Выйти
